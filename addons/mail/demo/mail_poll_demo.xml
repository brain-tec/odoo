<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mail.favorite_food_poll_message_demo" model="mail.message">
            <field name="model">discuss.channel</field>
            <field name="res_id" ref="mail.channel_public_community_demo"/>
            <field name="message_type">mail_poll</field>
            <field name="subtype_id" ref="mail.mt_comment"/>
            <field name="author_id" ref="base.partner_admin"/>
            <field name="create_uid" ref="base.user_admin"/>
        </record>
        <record model="mail.poll" id="mail.favorite_food_poll_demo">
            <field name="poll_question">What's your favorite food?</field>
            <field name="poll_end_dt" eval="DateTime.now() + relativedelta(hours=24)"/>
            <field name="allow_multiple_options" eval="True"/>
            <field name="start_message_id" ref="mail.favorite_food_poll_message_demo"/>
            <field name="create_uid" ref="base.user_admin"/>
        </record>
        <record model="mail.poll.option" id="mail.favorite_food_option_sushi_demo">
            <field name="poll_id" ref="mail.favorite_food_poll_demo"/>
            <field name="option_label">üç£ Sushi</field>
            <field name="create_uid" ref="base.user_admin"/>
        </record>
        <record model="mail.poll.option" id="mail.favorite_food_option_pizza_demo">
            <field name="poll_id" ref="mail.favorite_food_poll_demo"/>
            <field name="option_label">üçï Pizza</field>
            <field name="create_uid" ref="base.user_admin"/>
        </record>
        <record model="mail.poll.option" id="mail.favorite_food_option_burger_demo">
            <field name="poll_id" ref="mail.favorite_food_poll_demo"/>
            <field name="option_label">üçî Burger</field>
            <field name="create_uid" ref="base.user_admin"/>
        </record>
    </data>
</odoo>
